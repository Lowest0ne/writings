<h1>All the books</h1>
<table>
  <th>Title</th>
  <th>About</th>
  <%= content_tag( :th, 'Options' ) if current_admin %>
  <% @books.each do | book | %>
    <tr>
      <td><%= link_to book.title, book_path( book ) %></td>
      <td><%= sanitize( book.about )  %></td>
      <%= content_tag(:td, edit_destroy_links( book )) if current_admin %>
    </tr>
  <% end %>
</table>
<%= link_to( 'Create Book', new_book_path ) if current_admin %>
