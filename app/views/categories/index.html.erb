<table>
  <th>Name</th>
  <%= content_tag( :th, 'Options' ) if current_admin %>
  <% @categories.each do | category | %>
    <tr>
      <td><%= link_to category.name, category_path( category ) %></td>
      <%= content_tag( :td, edit_destroy_links( category ) ) if current_admin %>
    </tr>
  <% end %>
</table>
<%= link_to( 'Create Category', new_category_path ) if current_admin %>
